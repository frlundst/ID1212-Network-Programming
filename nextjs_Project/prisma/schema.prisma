model Product {
  id String @default(cuid()) @id
  subCategory SubCategory @relation(fields: [subCategoryId], references: [id])
  subCategoryId String @map(name: "sub_category_id")
  title String
  description String
  @@map(name: "product")
}

model Category {
  id String @default(cuid()) @id
  name String @unique
  subCategory SubCategory[]
  @@map(name: "category")
}

model SubCategory {
  id String @default(cuid()) @id
  name String @unique
  products Product[]
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String @map(name: "category_id")
  @@map(name: "sub_category")
}
